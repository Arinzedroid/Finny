<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:minWidth="230dp"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog_drawable"
    tools:context=".fragments.UpdateSavingsFragment">

    <TextView
        android:id="@+id/text"
        android:text="Amount"
        style="@style/CustomTextStyleBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/amt_et"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:minWidth="200dp"
        android:padding="5dp"
        android:hint="Enter amount to add or subtract"
        android:inputType="numberDecimal"
        android:minHeight="45dp"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_below="@+id/text"
        android:background="@drawable/edit_text_drawable"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/dimText"
        android:layout_below="@+id/amt_et"
        android:id="@+id/goal_text"
        android:text="@string/goal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:id="@+id/save_btn"
        android:background="@drawable/button_round_corner"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/goal_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:foreground="?android:attr/selectableItemBackground"/>


</RelativeLayout>